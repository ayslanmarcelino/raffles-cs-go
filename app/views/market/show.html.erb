<div class="container" style="height: 100vh">
  <div class="d-flex">
    <div class="col-lg-6">
      <div class="zoom-show">
        <%= image_tag(@skin.image_skin, width: '100%') %>
      </div>
      <% if positive_value?(@skin.float) %>
        <div style="height: 50px; font-size: 12px;">
          <i class="fas fa-sort-down float-left fs-10" style="margin-left: <%= @skin.float * 100 %>%;"></i>
          <div class="progress float-chart"></div>
        </div>
      <% else %>
        <div style="height: 50px; font-size: 12px;"></div>
      <% end %>
    </div>
    <div class="col-lg-6">
      <div class="">
        <%= @skin.description %>
      </div>
      <div class="">
        <%= @skin.exterior %>
      </div>
      <div class="">
        <%= @skin.float %>
      </div>
    </div>
  </div>
</div>
