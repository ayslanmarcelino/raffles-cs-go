<div class="dropdown">
  <button class="btn btn-dark btn-sm dropdown-toggle mb-2" type="button" data-toggle="dropdown">
    <i class="fas fa-sort-amount-down"></i>
    <%= t('.order_by') %>
  </button>
  <div class="dropdown-menu">
    <div><button class="btn w-100 text-left"><%= sortable('description', t('.description')) %></button></div>
    <div><button class="btn w-100 text-left"><%= sortable('exterior', t('.exterior')) %></button></div>
    <div><button class="btn w-100 text-left"><%= sortable('float', t('.float')) %></button></div>
    <div><button class="btn w-100 text-left"><%= sortable('price_steam', t('.price_steam')) %></button></div>
    <div><button class="btn w-100 text-left"><%= sortable('sale_price', t('.sale_price')) %></button></div>
  </div>
</div>
<div class="grid-view">
  <% @skins.each do |skin| %>
    <div class="mb-4 mr-4" style="background-color: #1F1F1F; color: white;">
      <% if skin.expiration_date.present? && time_tradelock_integer(skin.expiration_date).positive? %>
        <div style="background-color: #f54041; border-bottom-right-radius: 15px; border-bottom-left-radius: 15px; text-align: center; font-size: 14px">
          <%= t('.releases_on') %> <%= time_tradelock(skin.expiration_date) %>
        </div>
      <% else %>
        <div style="background-color: green; border-bottom-right-radius: 15px; border-bottom-left-radius: 15px; text-align: center; font-size: 14px">
          <%= t('.available') %>
        </div>
      <% end %>
      <button class="btn btn-outline-info btn-sm mt-2 ml-2" type="button" href="<%= skin.inspect_url %>">
        <%= t('.inspect_in_game') %>
      </button>
      <div class="col-lg-12">
        <%= image_tag(skin.image_skin, width: 300) %>
      </div>
      <div class="card-body p-3">
        <% if skin.has_sticker %>
          <div style="text-align: center; margin-top: -40px;">
            <% skin.image_sticker.each do |sticker| %>
              <%= image_tag(sticker, width: 65) %>
            <% end %>
          </div>
        <% end %>
        <h5 class="card-title font-weight-bold fuchsia-rose-text mb-0" style="color: #<%= skin.description_color %>; font-size: 17px; max-width: 300px">
          <%= skin.description %>
        </h5>
        <p class="aqua-sky-text mb-0">
          <% if skin.exterior != 'Nenhum'%>
            <%= skin.exterior %>
          <% end %>
        </p>
        <ul class="list-unstyled list-inline my-2">
          <% if skin.float.positive? %>
            <div>
              <i class="fas fa-arrow-down float-left" style="margin-left: <%= skin.float * 100 %>%; font-size: 10px;"></i>
              <div class="progress float-chart"></div>
              <%= t('.float') %>: <%= skin.float %>
            </div>
          <% end %>
        </ul>
        <div class="chili-pepper-text mb-0" style="font-size: 18px; font-weight: bold;">
          <span class="badge badge-success" style="float: right; height: 27px; text-align: center; line-height: 1.5;">
            <%= (100 - (skin.sale_price * 100 / skin.price_steam)).round(1) %>% OFF
          </span>
        </div>
        <div class="chili-pepper-text mb-0" style="font-size: 18px; font-weight: bold;">
        <br>
          <div>
            <%= image_tag('logo_steam.png', width: 28) %>
            <%= number_to_currency(skin.price_steam) %>
          </div>
          <div>
            <%= image_tag('logo_without_name.png', width: 28) %>
            <%= number_to_currency(skin.sale_price) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
