<div class="container">
  <div class="card o-hidden bg-gradient-pingo border-0 shadow-lg my-5">
    <div class="card-body p-0">
      <div class="row">
        <div class="col-lg-5 d-none d-lg-block">
          <%= image_tag 'logo.png' %>
        </div>
        <div class="col-lg-7">
          <div class="p-5">
            <div class="text-center">
              <h1 class="h4 text-gray-900 mb-4"><%= t('.new_user') %></h1>
            </div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
              <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                  <%= form.text_field(:first_name, class: 'form-control form-control-user', placeholder: 'Primeiro nome', required: true) %>
                </div>
                <div class="col-sm-6">
                  <%= form.text_field(:last_name, class: 'form-control form-control-user', placeholder: 'Sobrenome', required: true) %>
                </div>
              </div>
              <div class="form-group">
                <%= form.text_field(:nickname, class: 'form-control form-control-user', placeholder: 'Como prefere ser chamado?', required: true) %>
              </div>
              <div class="form-group">
                <%= form.text_field(:email, class: 'form-control form-control-user', placeholder: 'E-mail', required: true, type: :email) %>
              </div>
              <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                  <%= form.password_field(:password, class: 'form-control form-control-user', placeholder: 'Senha') %>
                </div>
                <div class="col-sm-6">
                  <%= form.password_field(:password_confirmation, class: 'form-control form-control-user', placeholder: 'Confirmação de senha') %>
                </div>
              </div>
              <button class="btn btn-primary btn-user btn-block">
                <%= t('.create_new') %>
              </button>
            <% end %>
            <hr>
            <div class="text-center">
             <%= link_to 'Já tem conta? Entre aqui', new_user_session_path, class: 'small'%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
