<div class="container">
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <div class="row">
            <div class="col-lg-6 bg-gradient-pingo d-none d-lg-block">
              <%= image_tag('logo.png', height: 400) %>
            </div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4"><%= t('.welcome') %></h1>
                </div>
                <div class="alert-login text-center">
                  <% flash.each do |key, value| %>
                    <% unless key.to_s == 'timedout' %>
                      <div class="flash <%= key %>">
                        <%= value %>
                      </div>
                    <% end %>
                  <% end %>
                </div>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'user' }) do |f| %>
                  <div class="form-group">
                    <%= f.email_field(:email, placeholder: t('.email'), class:'form-control form-control-user', autofocus: true) %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field(:password, placeholder: t('.password'), class:'form-control form-control-user') %>
                  </div>
                  <button class="btn btn-primary btn-user btn-block">
                    <%= t('.enter') %>
                  </button>
                <% end %>
                <hr>
                <div class="text-center">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
