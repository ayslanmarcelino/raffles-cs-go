<title>@pingo.rifas</title>
<body class="bg-gradient-pingo">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="row">
          <div class="col-lg-12 text-center">
            <%= image_tag 'logo.png', height: 200 %>
          </div>
          <div class="col-lg-12">
            <div class="p-5">
              <div class="text-center">
                <div class="alert-login">
                  <% flash.each do |key, value| %>
                    <div class="flash <%= key %>">
                      <%= value %>
                    </div>
                  <% end %>
                </div>
              </div>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'user' }) do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, placeholder: 'Digite seu e-mail', class:'form-control form-control-user', autofocus: true %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, placeholder: 'Digite sua senha', class:'form-control form-control-user' %>
                </div>
                <button class="btn btn-primary btn-user btn-block">
                  Entrar
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
