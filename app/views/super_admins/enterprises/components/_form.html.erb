<div class="col-lg-12">
  <%= form.label(:description) %>
  <%= form.text_field(:description, class: 'form-control form-control-user', required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:instagram) %>
  <%= form.text_field(:instagram, class: 'form-control form-control-user') %>
</div>
<div class="col-lg-12">
  <%= form.label(:twitch) %>
  <%= form.text_field(:twitch, class: 'form-control form-control-user') %>
</div>
<div class="col-lg-12">
  <%= form.label(:whatsapp_group) %>
  <%= form.text_field(:whatsapp_group, class: 'form-control form-control-user') %>
</div>
<div class="col-lg-12">
  <%= form.label(:primary_color) %><br>
  <%= form.color_field(:primary_color, required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:secondary_color) %><br>
  <%= form.color_field(:secondary_color, required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:logo) %><br>
  <%= form.file_field(:logo, accept: 'image/png, image/jpeg, image/jpg') %>
</div>
<div class="col-lg-12">
  <%= form.label(:favicon) %><br>
  <%= form.file_field(:favicon, accept: 'image/png, image/jpeg, image/jpg') %>
</div>
