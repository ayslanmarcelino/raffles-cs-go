<div class="text-center">
  <h4><%= t('.registered_enterprises') %></h4>
</div>
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <div class="row">
        <div class="col-sm-12">
          <table id="table" class="table table-striped table-bordered">
            <thead>
              <tr role="row">
                <th><%= t('.description') %></th>
                <th><%= t('.instagram') %></th>
                <th><%= t('.twitch') %></th>
                <th><%= t('.whatsapp_group') %></th>
                <th><%= t('.primary_color') %></th>
                <th><%= t('.secondary_color') %></th>
                <th><%= t('.created_at') %></th>
                <th><%= t('.updated_at') %></th>
                <th class="table-buttons">
                  <%= link_to new_super_admins_enterprise_path(@enterprise), class: 'btn btn-success btn-circle' do %>
                    <i class="fas fa-plus"></i>
                  <% end %>
                </th>
              </tr>
            </thead>
            <tbody>
              <% @enterprises.each do |enterprise| %>
                <tr role="row" class="odd">
                  <td><%= formatted_field_capitalize(enterprise.description) %></td>
                  <td><%= enterprise.instagram %></td>
                  <td><%= enterprise.twitch %></td>
                  <td><%= enterprise.whatsapp_group %></td>
                  <td class="text-center">
                    <span class="badge" style="background-color: <%= enterprise.primary_color %>">
                      <%= enterprise.primary_color %>
                    </span>
                  </td>
                  <td class="text-center">
                    <span class="badge" style="background-color: <%= enterprise.primary_color %>; color: <%= enterprise.secondary_color %>">
                      <%= enterprise.secondary_color %>
                    </span>
                  </td>
                  <td><%= l(enterprise.created_at.to_datetime, format: :with_full_hour) %></td>
                  <td><%= l(enterprise.updated_at.to_datetime, format: :with_full_hour) %></td>
                  <td class="table-buttons">
                    <%= link_to edit_super_admins_enterprise_path(enterprise), class: 'btn btn-info btn-circle' do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to super_admins_enterprise_path(enterprise), method: :delete, class: 'btn btn-danger btn-circle', data: { confirm: "#{t('.delete_confirm')}: #{formatted_field_capitalize(enterprise.description)}?" } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <% if @enterprises.empty? %>
            <tr><%= t('.no_enterprises') %></tr>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function(){
    $('#table').DataTable({
      "order": [],
      "columnDefs": [{
        "targets": 'no-sort',
        "orderable": false,

      }],
      "language": {
        "url": "//cdn.datatables.net/plug-ins/1.10.22/i18n/Portuguese-Brasil.json",
        "decimal": ",",
        "thousands": "."
      }
    });
  });
</script>