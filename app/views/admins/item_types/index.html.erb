<div class="text-center">
  <h4><%= t('.registered_item_types') %></h4>
</div>
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
        <div class="row">
          <div class="col-sm-12">
            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info">
              <thead>
                <tr role="row">
                  <th><%= t('.description') %></th>
                  <th><%= t('.created_at') %></th>
                  <th><%= t('.updated_at') %></th>
                  <th class="table-buttons">
                    <%= link_to new_admins_item_type_path(@item_type), class: 'btn btn-success btn-circle' do %>
                      <i class="fas fa-plus"></i>
                    <% end %>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% @item_types.each do |item| %>
                  <tr role="row" class="odd">
                    <td><%= item_type_formatted(item.description) %></td>
                    <td><%= l(item.created_at.to_datetime, format: :with_full_hour) %></td>
                    <td><%= l(item.updated_at.to_datetime, format: :with_full_hour) %></td>
                    <td class="table-buttons">
                      <%= link_to edit_admins_item_type_path(item), class: 'btn btn-info btn-circle' do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                      <%= link_to admins_item_type_path(item), method: :delete, class: 'btn btn-danger btn-circle', data: { confirm: "#{t('.delete_confirm')}: #{item_type_formatted(item.description)}?" } do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <% if @item_types.empty? %>
              <tr><%= t('.no_item_types') %></tr>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
