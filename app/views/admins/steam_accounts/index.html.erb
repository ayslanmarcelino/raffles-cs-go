<div class="text-center">
  <h4><%= t('.registered_steam_accounts') %></h4>
</div>
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
        <div class="row">
          <div class="col-sm-12">
            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info">
              <thead>
                <tr role="row">
                  <th><%= t('.description') %></th>
                  <th><%= t('.steam_id') %></th>
                  <th><%= t('.url') %></th>
                  <th class="table-buttons">
                    <%= link_to new_admins_steam_account_path(@steam_account), class: 'btn btn-success btn-circle' do %>
                      <i class="fas fa-plus"></i>
                    <% end %>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% @steam_accounts.each do |steam_account| %>
                  <tr role="row" class="odd">
                    <td><%= formatted_field_capitalize(steam_account.description) %></td>
                    <td><%= steam_account.steam_id %></td>
                    <td><%= steam_account.url %></td>
                    <td class="table-buttons">
                      <%= link_to edit_admins_steam_account_path(steam_account), class: 'btn btn-info btn-circle' do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                      <%= link_to admins_steam_account_path(steam_account), method: :delete, class: 'btn btn-danger btn-circle', data: { confirm: "#{t('.delete_confirm')}: #{steam_account.url}?" } do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <% if @steam_accounts.empty? %>
              <tr><%= t('.no_steam_accounts') %></tr>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
