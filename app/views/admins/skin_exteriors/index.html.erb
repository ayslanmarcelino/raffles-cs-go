<div class="text-center">
  <h4><%= t('.registered_skin_exterior') %></h4>
</div>
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
        <div class="row">
          <div class="col-sm-12">
            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info">
              <thead>
                <tr role="row">
                  <th><%= t('.description') %></th>
                  <th><%= t('.abbreviation') %></th>
                  <th><%= t('.created_at') %></th>
                  <th><%= t('.updated_at') %></th>
                  <th class="table-buttons">
                    <%= link_to new_admins_skin_exterior_path(@skin_exterior), class: 'btn btn-success btn-circle' do %>
                      <i class="fas fa-plus"></i>
                    <% end %>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% @skin_exteriors.each do |exterior| %>
                  <tr role="row" class="odd">
                    <td><%= formatted_field_capitalize(exterior.description) %></td>
                    <td><%= abbreviation(exterior.description) %></td>
                    <td><%= l(exterior.created_at.to_datetime, format: :with_full_hour) %></td>
                    <td><%= l(exterior.updated_at.to_datetime, format: :with_full_hour) %></td>
                    <td class="table-buttons">
                      <%= link_to edit_admins_skin_exterior_path(exterior), class: 'btn btn-info btn-circle' do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                      <%= link_to admins_skin_exterior_path(exterior), method: :delete, class: 'btn btn-danger btn-circle', data: { confirm: "#{t('.delete_confirm')}: #{formatted_field_capitalize(exterior.description)} #{abbreviation(exterior.description)}?" } do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <% if @skin_exteriors.empty? %>
              <tr><%= t('.no_skin_exteriors') %></tr>
            <% end %>
          </div>
        </div>
      </div>
      <%= paginate @skin_exteriors %>
    </div>
  </div>
</div>
