<div class="text-center">
  <h4><%= t('.editing') %>: <%= @skin_exterior.description %></h4>
</div>
<div class="row card">
  <%= render partial: 'admins/skin_exteriors/components/errors.html.erb' %>
  <div class="col-lg-12 m-t-10">
    <%= form_with(model: [:admins, @skin_exterior], local: true) do |form| %>
      <%= render partial: 'admins/skin_exteriors/components/form.html.erb',
            locals: { form: form } %>
      <div class="row btn-actions">
        <div class="col-lg-6">
          <%= link_to t('.cancel'), admins_skin_exteriors_path, class: 'btn btn-danger btn-user btn-block' %>
        </div>
        <div class="col-lg-6">
          <button class="btn btn-pingo btn-user btn-block">
            <%= t('.edit_user') %>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
