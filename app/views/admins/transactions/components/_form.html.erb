<div class="col-lg-12">
  <%= form.label(:description) %>
  <%= form.text_field(:description, class: 'form-control form-control-user', required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:price) %>
  <%= form.text_field(:price, class: 'form-control form-control-user', required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:transaction_type) %></br>
  <%= form.collection_select(:transaction_type_id, @transaction_types, :id, :description, {}, { class: 'select2_single form-control', required: true }) %>
</div>
<div class="col-lg-12">
  <%= form.label(:user) %></br>
  <%= form.collection_select(:user_id, @user, :id, :full_name, {}, { class: 'select2_single form-control', required: true }) %>
</div>
