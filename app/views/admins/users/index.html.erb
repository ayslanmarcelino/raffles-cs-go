<div class="text-center">
  <h4><%= t('.registered_users') %></h4>
</div>
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <div class="row">
        <div class="col-sm-12">
          <table id="table" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th><%= t('.name') %></th>
                <th><%= t('.email') %></th>
                <th><%= t('.user_type') %></th>
                <th><%= t('.last_sign_in') %>:</th>
                <th><%= t('.cell_phone') %></th>
                <th><%= t('.sign_in_count') %></th>
                <th class="no-sort table-buttons">
                  <%= link_to new_admins_user_path(@user), class: 'btn btn-success btn-circle' do %>
                    <i class="fas fa-plus"></i>
                  <% end %>
                </th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr role="row" class="odd">
                  <td><%= full_name_formatted(user) %></td>
                  <td><%= user.email %></td>
                  <td>
                    <span class="badge-type badge-<%= role_color?(user.is_admin, user.is_super_admin, user.is_owner) %>">
                      <%= role?(user.is_admin, user.is_super_admin, user.is_owner) %>
                    </span>
                  </td>
                  <td><%= last_sign_in_user(user.last_sign_in_at) %></td>
                  <td><%= user.cell_phone %></td>
                  <td><%= user.sign_in_count %></td>
                  <td class="table-buttons">
                    <%= link_to edit_admins_user_path(user), class: 'btn btn-info btn-circle' do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to admins_user_path(user), method: :delete, class: 'btn btn-danger btn-circle', data: { confirm: "#{t('.delete_confirm')}: #{user.email}?" } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <% if @users.empty? %>
            <tr><%= t('.no_user') %></tr>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function(){
    $('#table').DataTable({
      "order": [],
      "columnDefs": [{
        "targets": 'no-sort',
        "orderable": false,
      }],
      "language": {
        "url": "//cdn.datatables.net/plug-ins/1.10.22/i18n/Portuguese-Brasil.json",
        "decimal": ",",
        "thousands": "."
      }
    });
  });
</script>
