<div class="text-center">
  <h4><%= t('.registered_users') %></h4>
</div>
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
        <div class="row">
          <div class="col-sm-12">
            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info">
              <thead>
                <tr role="row">
                  <th><%= t('.name') %></th>
                  <th><%= t('.email') %></th>
                  <th><%= t('.user_type') %></th>
                  <th><%= t('.last_sign_in') %>:</th>
                  <th><%= t('.sign_in_count') %></th>
                  <th class="table-buttons">
                    <%= link_to new_admins_user_path(@user), class: 'btn btn-success btn-circle' do %>
                      <i class="fas fa-plus"></i>
                    <% end %>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr role="row" class="odd">
                    <td><%= full_name_formatted(user) %></td>
                    <td><%= user.email %></td>
                    <td>
                      <span class="badge-type badge-<%= admin_color?(user.is_admin) %>">
                        <%= admin?(user.is_admin) %>
                      </span>
                    </td>
                    <td><%= last_sign_in_user(user.last_sign_in_at) %></td>
                    <td><%= user.sign_in_count %></td>
                    <td class="table-buttons">
                      <%= link_to edit_admins_user_path(user), class: 'btn btn-info btn-circle' do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                      <%= link_to admins_user_path(user), method: :delete, class: 'btn btn-danger btn-circle', data: { confirm: "#{t('.delete_confirm')}: #{user.email}?" } do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <% if @users.empty? %>
              <tr><%= t('.no_user') %></tr>
            <% end %>
          </div>
        </div>
      </div>
      <%= paginate @users %>
    </div>
  </div>
</div>
