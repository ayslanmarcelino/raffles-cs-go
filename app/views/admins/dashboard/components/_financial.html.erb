<h4>
  <%= t('admins.dashboard.index.financial') %>
</h4>
<div class="col-12 d-inline-flex f-wrap">
  <div class="col-xl-3 col-md-6 mb-4 f-wrap">
    <div class="card border-left-steam shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-steam text-uppercase mb-1">
              <%= t('admins.dashboard.index.price_total_steam') %>
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= number_to_currency(@financial_info[:price_total_steam]) %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-money fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xl-3 col-md-6 mb-4 f-wrap">
    <div class="card border-left-csmoney shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-csmoney text-uppercase mb-1">
              <%= t('admins.dashboard.index.price_total_csmoney') %>
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= number_to_currency(@financial_info[:price_total_csmoney]) %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-money fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xl-3 col-md-6 mb-4 f-wrap">
    <div class="card border-left-warning shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
              <%= t('admins.dashboard.index.price_total_paid') %>
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= number_to_currency(@financial_info[:price_total_paid]) %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-money fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xl-3 col-md-6 mb-4 f-wrap">
    <div class="card border-left-<%= @financial_info[:difference_value].positive? ? 'success' : 'danger' %> shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-<%= @financial_info[:difference_value].positive? ? 'success' : 'danger' %> text-uppercase mb-1">
              <%= t('admins.dashboard.index.difference_value') %>
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= number_to_currency(@financial_info[:difference_value]) %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-money fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
