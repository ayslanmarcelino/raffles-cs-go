<% if @transaction_info[:transactions_by_month_values].present? %>
  <div class="d-flex">
    <div class="text-center mb-2 mr-1" style="width: 50%;">
      <h4><%= t('admins.dashboard.index.chart_transactions') %></h4>
      <canvas id="chartTransactions" style="width: 50%; height: 50%"></canvas>
      <div id="values"
           data-labels="<%= @transaction_info[:transactions_by_month_keys] %>"
           data-values="<%= @transaction_info[:transactions_by_month_values] %>">
      </div>
    </div>
    <div class="text-center mb-2" style="width: 50%;">
      <h4><%= t('admins.dashboard.index.chart_net_profit') %></h4>
      <canvas id="chartNetProfit" style="width: 50%; height: 50%"></canvas>
      <div id="valuesNetProfit"
           data-labels="<%= @transaction_info[:net_profit_keys] %>"
           data-values="<%= @transaction_info[:net_profit_values] %>">
      </div>
    </div>
  </div>
<% end %>
<% if @transaction_info[:transactions_by_type_values].sum.positive? %>
  <div class="text-center">
    <h4><%= t('admins.dashboard.index.chart_pie_by_transactions_in') %> <%= Date.today.strftime('%m/%Y') %></h4>
    <canvas id="chartPieTransactions" style="width: 50%; height: 50%"></canvas>
    <div id="valuesPie"
         data-labels="<%= @transaction_info[:transactions_by_type_keys] %>"
         data-values="<%= @transaction_info[:transactions_by_type_values] %>">
    </div>
  </div>
<% end%>
